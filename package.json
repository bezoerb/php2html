{
  "name": "php2html",
  "version": "2.0.0",
  "description": "Convert php files to html",
  "license": "MIT",
  "repository": "bezoerb/php2html",
  "author": {
    "name": "Ben ZÃ¶rb",
    "email": "ben@sommerlaune.com",
    "url": "sommerlaune.com"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "test": "xo && nyc ava",
