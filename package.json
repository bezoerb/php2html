    "connect": "^3.7.0",
    "connect-modrewrite": "^0.10.2",
    "debug": "^4.1.1",
    "gateway": "^1.0.0",
    "get-port": "^5.0.0",
    "get-stdin": "^7.0.0",
    "htmlhint": "^0.11.0",
    "indent-string": "^4.0.0",
    "lodash": "^4.3.0",
    "meow": "^5.0.0",
    "qs": "^6.7.0",
    "request": "^2.55.0",
    "shelljs": "^0.8.3",
    "tempfile": "^3.0.0",
    "tmp": "^0.1.0",
    "update-notifier": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^2.1.0",
    "coveralls": "^3.0.4",
    "execa": "^1.0.0",
    "mockery": "^2.1.0",
    "normalize-newline": "^3.0.0",
    "nyc": "^14.1.1",
    "pify": "^4.0.1",
    "read-package-json": "^2.0.3",
    "read-pkg-up": "^6.0.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
